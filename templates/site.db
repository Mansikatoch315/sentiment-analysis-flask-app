CREATE TABLE user (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    username TEXT UNIQUE NOT NULL,
    password TEXT NOT NULL
);

CREATE TABLE sentiment (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    user_id INTEGER NOT NULL,
    text TEXT,
    positive REAL,
    neutral REAL,
    negative REAL,
    compound REAL,
    FOREIGN KEY (user_id) REFERENCES user(id)
);
